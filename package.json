{
  "name": "lapse",
  "version": "1.0.6",
  "private": true,
  "main": "main/index.js",
  "productName": "Lapse",
  "description": "A minimal time-lapse screen recording tool for mac and windows",
  "author": {
    "name": "Achuth Hadnoor",
    "email": "hey@achuth.dev",
    "url": "https://achuth.dev"
  },
  "scripts": {
    "start": "next build renderer && next start renderer",
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build renderer && next export renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "auto-launch": "^5.0.5",
    "axios": "^1.3.4",
    "classnames": "^2.3.2",
    "electron-log": "^5.0.1",
    "electron-next": "^3.1.5",
    "electron-store": "^8.1.0",
    "electron-util": "^0.17.2",
    "fluent-ffmpeg": "^2.1.2",
    "mac-windows": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "temp": "^0.9.4"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.2",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "@types/temp": "^0.9.1",
    "autoprefixer": "^10.4.13",
    "electron": "^23",
    "electron-builder": "^23.0.3",
    "electron-builder-notarize": "^1.4.0",
    "next": "^12",
    "postcss": "^8.4.21",
    "rimraf": "^3.0.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.5.2"
  },
  "build": {
    "appId": "com.achuth.lapse",
    "afterSign": "electron-builder-notarize",
    "protocols": {
      "name": "lapse",
      "schemes": [
        "lapse"
      ]
    },
    "files": [
      "main",
      "assets",
      "build",
      "renderer/out"
    ],
    "mac": {
      "electronUpdaterCompatibility": ">=2.16",
      "category": "public.app-category.productivity",
      "minimumSystemVersion": "10.12.0",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "extendInfo": {
        "NSUserNotificationAlertStyle": "alert",
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "Video",
            "CFBundleTypeRole": "Viewer",
            "LSHandlerRank": "Alternate",
            "LSItemContentTypes": [
              "public.mpeg-4",
              "com.apple.quicktime-movie"
            ]
          }
        ]
      },
      "target": {
        "target": "default",
        "arch": [
          "universal"
        ]
      }
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
